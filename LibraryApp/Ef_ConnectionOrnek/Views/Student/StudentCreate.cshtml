@model StudentCreateViewModel


<h1>Yeni Öğrenci Ekleme Sayfası </h1>

<form method="post" asp-controller="Student" asp-action="StudentCreate">

    <div>
        <label>Öğrenci Adı :<input asp-for="FirstName" type="text" class="form-control" /></label>


        <label>Öğrenci Soyadı:<input asp-for="LastName" type="text" class="form-control" /></label>

        <label>Öğrenci Okul No :<input asp-for="SchoolNumber" type="text" class="form-control" /></label>
      
        <label> Erkek Öğrenci: </label>
        <input asp-for="Gender" value="True" type="checkbox" class="form-control" />
        <label> Kız Öğrenci: </label>
        <input asp-for="Gender" value="false" type="checkbox" class="form-control" />
      
        <label>Öğrenci Tel No:<input asp-for="PhoneNumber" type="text" class="form-control" /></label>

        <label>Öğrenci Doğum Tarihi:<input asp-for="BirthDay" type="date" class="form-control" /></label>
    </div>
    <div>

        <button class="btn btn-dark fw-bold mt-2 " type="submit">Kaydet</button>
    </div>



</form>











