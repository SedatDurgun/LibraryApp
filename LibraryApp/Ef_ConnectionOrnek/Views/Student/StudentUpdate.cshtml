
@model StudentUpdateViewModel

<h1> Öğrenci  Bilgileri Yenileme Sayfası</h1> 

<form asp-controller="Student" asp-action="StudentUpdate">
  
     
    <div >

        <label class=" fw-bold" > Güncel Öğrenci Adı :<input asp-for="FirstName" type="text" class="form-control" /></label>


        <label class=" fw-bold"> Güncel Öğrenci Soyadı:<input asp-for="LastName" type="text" class="form-control" /></label>

        <label class =" fw-bold"> Güncel Öğrenci Okul No :<input asp-for="SchoolNumber" type="text" class="form-control" /></label>


        <label> Güncel Erkek Öğrenci:<input asp-for="Gender" type="checkbox" class="form-control" /> @(Model.Gender ? "checked" : "")  </label>
        <label> Güncel Kız Öğrenci:<input asp-for="Gender" type="checkbox" class="form-control" /> @(Model.Gender ? "" : "checked") </label>

        <label class=" fw-bold"> Güncel Öğrenci Tel No:<input asp-for="PhoneNumber" type="text" class="form-control" /></label>

        <label class=" fw-bold"> Güncel Öğrenci Doğum Tarihi:<input asp-for="BirthDay" type="date" class="form-control" /></label>
    </div>
    <div>

        <button class="btn btn-dark fw-bold mt-2 " type="submit">Kaydet</button> 
    
        
    </div>



</form>