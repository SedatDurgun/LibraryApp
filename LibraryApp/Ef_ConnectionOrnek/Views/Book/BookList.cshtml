@model List<BookListViewModel>

<h3>Kitap Yenileme Sayfası</h3>

<a asp-controller="Book" asp-action="BookCreate" class="btn bnt-warning  mb-2 float-end "  > Yeni Ekle</a>

<table class="table  table-striped " >
    <thead>
        <tr>
        <th>Kitap</th>
        <th>Sayfa Sayısı</th>
        <th>Yazar</th>
        <th>Kitap Türü</th>
        <th>Aksiyon</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PageCount</td>
                <td>@item.AuthorFullName</td>
                <td>@item.BookType</td>

             <td>
                 <a asp-controller="Book" asp-action="BookUpdate" asp-route-ıd="@item.Id" class="btn btn-primary" > Düzenle</a>
                 <a asp-controller="Book" asp-action="BookDelete" asp-route-ıd="@item.Id" class="btn btn-danger" >Sil</a>

             </td>

            </tr>
        }

    </tbody>

</table>